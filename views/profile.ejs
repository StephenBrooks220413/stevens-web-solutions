<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body class="bg-layout">

<%- include('layouts/nav') -%>

<div class="home-intro">
    <div class="container space">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/profiles">Profiles</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">
                    <%= user.username %>
                </li>
            </ol>
        </nav>
        <p class="lead">
            Member Since <%= user.dateJoined.toLocaleString() %>
        </p>
    </div>

    <div class="container text-center mb-5">
        <!--Grid row-->
        <div class="row-cols-8 py-3 justify-content-center align-items-center text-center me-2 mx-auto d-flex">
            <!--Grid column-->
            <p class="lead">
                <%= user.about %>
            </p>
            <!--Grid column-->

        </div>
        <p>
            <a href="mailto:<%= user.email %>" class="btn btn-primary">Message User</a>
        </p>

    </div>
</div>

<%- include('layouts/footer') -%>
<%- include('layouts/scripts') -%>

</body>
</html>
